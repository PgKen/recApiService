<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <title><%= title %></title>
</head>

<body>
    <div class="ad-mainContent">
        <div class="imgProfile">

            <img src='https://taladsrimuang.com/office/people/resize/resize_<%= dataUserService[0].images_personal %>'>

        </div>
        <div class=" rec-mainTitle">
            <label for=""><%= title %> </label>
            <span>
                <i onclick="linkLogout()" class="material-icons">exit_to_app</i>
            </span>
        </div>
        <div class="ad-mainBox">
            <div class="ad-mainArticle">
                <div class="ad-titleArticle"><%= subTitle %></div>
            </div>

        </div>

        <ul class="boxListService">

            <li>
                <span>ลำดับ</span>
                <span>รายการ</span>
                <span>ใบงาน</span>
                <span>
                    &nbsp;
                </span>
            </li>
            <% for( let i = 0; i < data.length; i++ ) { %>

            <li>
                <span><%= i+1 %></span>
                <span><%= data[i].detail_job %></span>
                <% if(data[i].service == 0){ %>
                <span onclick="jobDetail_preview(<%= data[i].jobId %>)">
                    <i class="material-icons" style="color:orangered;">
                        pageview
                    </i>
                </span>
                <% }else{ %>

                <span onclick="linkJobDetail(<%= data[i].jobId %>)">
                    <i class="material-icons">
                        pageview
                    </i>
                </span>
                <% } %>
                <% if (data[i].service == 0) { %>
                <span>
                    <button style="background-color: #FF9800;" onclick="detailService(<%= data[i].jobId %>)">
                        รับแจ้ง
                    </button>
                </span>
                <% }else if(data[i].service == 1){ %>
                <span>
                    <button style="background-color: #2196F3;" onclick="ansService(<%= data[i].jobId %>)">
                        แจ้งผลซ่อม
                    </button>
                </span>
                <% }else if(data[i].service == 3){ %>
                <span>
                    <button style="background-color: #9E9E9E;color: white;">
                        เสร็จแล้ว
                    </button>
                </span>
                <% } %>
            </li>
            <% } %>
        </ul>
    </div>



</body>

<script>
    function linkLogout() {
        //location.href = "/service-chkLogin"
        location.href = "/logout"
    }

    function detailService(id) {
        console.log("idService = " + id)
        location.href = "/serviceDetail/" + id
    }

    function jobDetail_preview(id) {
        console.log("jobDetail_preview = " + id)
        location.href = "/jobDetail_preview/" + id
    }

    function ansService(id) {
        console.log("ans" + id)
        location.href = "/serviceAns/" + id
    }

    function linkJobDetail(id) {
        console.log("Detail = " + id)
        location.href = "/jobDetail/" + id
    }
</script>

</html>